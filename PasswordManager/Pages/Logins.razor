@page "/logins"


@using API.Services;
@using Database.Models;

@inject VaultLoginService VaultLoginService

@if (logins == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h1 class="font-bold">Logins (@logins.Count())</h1>
    <table class="w-full">
        <thead class="font-medium">
            <tr>
                <th scope="col" class="px-6 py-4">Name</th>
                <th scope="col" class="px-6 py-4">Description</th>
                <th scope="col" class="px-6 py-4">URL</th>
                <th scope="col" class="px-6 py-4">Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var login in logins)
            {
                <tr>
                    <td class="px-6 py-4">@login.Name</td>
                    <td class="px-6 py-4">@login.Description</td>
                    <td class="px-6 py-4">@login.URL</td>
                    <td class="px-6 py-4">@login.Email</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<VaultLogin> logins;

    protected override void OnInitialized()
    {
        logins = VaultLoginService.GetAll();
    }
}
