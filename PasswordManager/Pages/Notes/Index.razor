@page "/notes"

@using API.Services;
@using Database.Models;

@inject VaultNoteService VaultNoteService


@if (notes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h1 class="font-bold my-8">Notes (@notes.Count())</h1>
    <NavLink href="notes/create">
        New Note
    </NavLink>
    <table class="w-full">
        <thead class="font-medium">
            <tr>
                <th class="text-left">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in notes)
            {
                <tr>
                    <td>@note.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<VaultNote> notes;

    protected override void OnInitialized()
    {
        notes = VaultNoteService.GetAll();
    }
}
